.row
  .col-xs-12.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
    %h2 Change your password
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group
        = f.password_field :password, autofocus: true, autocomplete: "off", placeholder: 'New password', class: "form-control"
        - if @minimum_password_length
          %p.help-block
            #{@minimum_password_length} characters minimum
      .form-group
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'New password confirmation', class: "form-control"
      .form-group.actions
        = f.submit "Change my password", class: "btn btn-success"
        or
        = link_to "cancel", root_path
    = render "devise/shared/links"
