%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "MyPix", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li
          = link_to "Your Pix", root_path, title: "MyPix",  data: {toggle: "tooltip", placement: "bottom"}, class: "bs-tooltip"
      %ul.nav.navbar-nav.navbar-right
        %li#lang
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %i.fa.fa-user
              = current_user.name
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to "Account", user_path(current_user)
              %li
                = link_to t('subnav.signedin.signout'), destroy_user_session_path
        - else
          %li.dropdown.nav-signin
            = link_to "/users/sign_in?locale=#{I18n.locale}", data: {toggle: 'dropdown',  target: "#"}, class: "dropdown-toggle" do
              Sign in
              %b.caret
            .dropdown-menu
              = form_for(User.new, as: resource_name, url: session_path(resource_name)) do |f|
                .field
                  = f.label :email
                  %br/
                  = f.email_field :email, autofocus: true
                .field
                  = f.label :password
                  %br/
                  = f.password_field :password, autocomplete: "off"
                - if devise_mapping.rememberable?
                  .field
                    = f.check_box :remember_me
                    = f.label :remember_me
                .actions
                  = f.submit "Log in"
              = render "devise/shared/links"
