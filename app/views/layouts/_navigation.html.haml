%nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "MyPix", root_path, class: "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if user_signed_in?
        .navbar-form.navbar-left
          = link_to "<span class='glyphicon glyphicon-plus'></span> Upload a picture".html_safe, new_user_pic_path(current_user), title: "Upload a new Pix", class: "bs-tooltip btn btn-info navbar-btn btn-sm"
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              %span.glyphicon.glyphicon-user{aria: {hidden: "true"}}
              = current_user.name
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit yout account", edit_user_registration_path(current_user)
              %li= link_to "Sign out", destroy_user_session_path
