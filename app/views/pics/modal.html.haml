.modal-header
  %button.close{type: "button", data: {dismiss: "modal"}, aria: {hidden: "true"}} Ã—
  %h4
    = @pic.title
    =raw "(#{link_to "permalink", user_pic_path(@pic.user, @pic)})"
.modal-body
  %p
    = image_tag(@pic.image_url, class: "img img-responsive")
  %p
    = @pic.description
  - if @pic.exifs.present?
    %h4 EXIF data
    %ul.list-group
      - @pic.exifs.each do |k,v|
        - if v.present?
          %li.list-group-item
            = "#{k.to_s.humanize}: #{v}"
.modal-footer
  .btn-group.pull-right
    - if can? :update, @pic
      = link_to edit_user_pic_path(@pic.user, @pic), class: "btn btn-primary", title: "Edit picture" do
        %span.glyphicon.glyphicon-edit{aria: {hidden: "true"}}
        Edit picture
    - if can? :destroy, @pic
      = link_to @pic, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}, title: "Delete picture" do
        %span.glyphicon.glyphicon-trash{aria: {hidden: "true"}}
        Delete picture


